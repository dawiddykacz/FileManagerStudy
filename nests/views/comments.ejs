<%- include('partials/header') %>
  <div>
    <h1>Nowy Komentarz <%= name %> Właściciel <%= ownerName %></h1>
    <form action="/comment/<%= id %>" method="POST">
      <input type="text" name="comment" placeholder="Komentarz" required>
      <button type="submit">Udostępnij</button>
    </form>
  </div>

  <div class="wrapper wrapper-center white-space-pre-line">
    <h1>Komentarze</h1>
    <% comments.forEach(c => { %>
      <%- include('partials/com', c) %>
    <% }) %>
  </div>
<%- include('partials/footer') %>

