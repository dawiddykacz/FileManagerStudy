<div class="wrapper wrapper-center white-space-pre-line">
    <div>
        <h1>Udostępnij plik {{name}}</h1>
        <form action="/add_acl/{{id}}" method="POST">
            <input type="text" name="username" placeholder="Nazwa użytkownika" required>
            <button type="submit">Udostępnij</button>
        </form>
    </div>
    <div>
        <h1>Udostępnienia</h1>
        {{#each access}}
                {{> acl this }}
        {{/each}}
    </div>
</div>